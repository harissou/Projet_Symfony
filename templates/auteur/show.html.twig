{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ auteur.adresse }}</td>
            </tr>
            <tr>
                <th>Livres</th>
                <td>
                    <ul>
                {% for livre in auteur.livres %}
                    <li>{{livre.titre}}
                {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('auteur_index') }}">back to list</a>

    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">edit</a>

    {{ include('auteur/_delete_form.html.twig') }}
{% endblock %}
